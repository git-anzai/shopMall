<!--custom Modal-->
<view class="modal-mask"></view>
<view>
  <view class='modal-photo'>
    <image class="userinfo-avatar" src="{{avatarUrl}}" mode="cover" style='width:80px;height:80px;border-radius:50%'></image>
  </view>
  <view class="modal-content">
    <view style='font-size:28rpx;color:#606266;padding:28rpx'> 他想要这件宝贝，快来帮TA砍价</view>
    <view>
      <view bindtap='rules' style='color:#007fff;overflow:hidden;text-align:right;font-size:24rpx;'>砍价规则</view>
      <view style='padding:20px 0'>
        <progress percent="80" active />
      </view>
      <view class='msg'>
        <text>已砍</text>
        <text>剩余</text>
      </view>
      <button size="mini" type='primary'  bindtap="bargain">帮他砍价</button>
    </view>
  </view>
</view>