page{
    background-color: #ECECEC;
    height: 100%;
}
.userinfo{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 15px;
    background-color: #fff;
}
.userinfo-avatar{
    width: 4em;
    height: 4em;
    border-radius: 50%;
    border: 1px solid #ddd;
    margin-bottom: 5px;
}
.userinfo-list{
    margin-top: 10px;
    line-height: 2;
}
.userinfo-item{
    display: flex;
    padding: 0 1em;
}
.userinfo-item:not(:last-child){
    border-bottom: 1px solid #ddd;
}
.title{
    flex: 1;
}
.box3,.box2{
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: white;
  border-radius: 20rpx;
  margin-top: 20px;
  box-sizing: border-box;
}