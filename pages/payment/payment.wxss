/* pages/payment/payment.wxss */
.pay-Bottom{
  width: 100%;
  height: 105rpx;
  line-height: 105rpx;
  background: #1AAD19;
  position: fixed;
  bottom: 0;
  color: white;
  font-size: 32rpx;
  text-align: center
}
.msg{
  padding: 40rpx;
  font-size: 18px;
  text-align: center;
  border: 1px solid #E4E7ED;
  margin:10px 10px 40px 10px;
  color: #909399;
  box-shadow:0px 0px 2px 2px #DCDFE6;
}
.main{
  box-sizing: border-box;
  margin: 16rpx;
  padding: 30rpx;
  border: 2px solid #E4E7ED;
}

.main-img{
  width:120rpx;height:120rpx;
  vertical-align: middle;
  margin-right: 60rpx;
}
.title{
  font-size: 18px;
  color: #606266
}
.txt{
  padding:18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 16px;
  margin-top: 80px;
  color: #606266;
}