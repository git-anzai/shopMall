.userinfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.userinfo-avatar {
  width: 4em;
  height: 4em;
  border-radius: 50%;
  border: 1px solid #ddd;
  margin-bottom: 5px;
}

.userinfo-list {
  margin-top: 10px;
  line-height: 2;
}

.userinfo-item {
  display: flex;
  padding: 0 1em;
}

.bottom {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  justify-content: space-between;
  font-size: 32rpx;
  display:flex;
  border: 1px solid salmon;
  padding: 0 20rpx;
  align-items: center;
  box-sizing: border-box
}
.button{
  padding: 12rpx 16rpx;
  box-sizing: border-box
}
