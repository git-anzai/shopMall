/* pages/goodsDetail/goodsDetail.wxss */

.userinfo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
}

.userinfo-avatar {
  width: 4em;
  height: 4em;
  border-radius: 50%;
  border: 1px solid #ddd;
  margin-bottom: 5px;
}

.userinfo-list {
  margin-top: 10px;
  line-height: 2;
}

.userinfo-item {
  display: flex;
  padding: 0 1em;
}
.desc{
  font-size:28rpx;padding:20rpx 0 28rpx 28rpx;color:#909399;
  text-indent: 72rpx;
}
.title{
  color: #606266
}

.bottom {
  width: 100%;
  height: 130rpx;
  position: fixed;
  bottom: 0;
  justify-content: space-between;
  font-size: 32rpx;
  display:flex;
  border-top:1px solid #E4E7ED;
  box-shadow:0px 0px 2px 2px #DCDFE6;
  padding: 0 28rpx;
  align-items: center;
  box-sizing: border-box
}
.button{
  padding: 18rpx 24rpx;
  box-sizing: border-box
}
.btn_warpper{
  display:flex;align-items:center;
  box-sizing: border-box;
    border:1px solid #E4E7ED;
    box-shadow:0px 0px 2px 2px #DCDFE6;
  }