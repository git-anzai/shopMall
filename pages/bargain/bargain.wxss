
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9500;
  width: 500rpx;
  overflow: hidden;
  padding:20rpx ;
  background: #fff;
  margin: -100rpx 106rpx;
  border-radius: 12rpx;
  text-align: center;
  color: #F56C6C;
  font-size: 28rpx;
}
