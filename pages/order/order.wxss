/* pages/order/order.wxss */
.tabs-box{
  background: #fff;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  box-shadow:2rpx 2rpx 12rpx #dfdfdf;
  box-sizing: border-box;
}
.tabs-box .tabs-item{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #1c2438;
  border-bottom: 1rpx solid #dddee1;  
  box-sizing: border-box;
}
.tabs-item.selected{
  box-sizing: border-box;
  color: #2d8cf0;
  border-bottom: 2px solid #2d8cf0;
}
view{
  -webkit-overflow-scrolling: touch
}
.items {
  border-bottom: 2rpx solid #ebeef5;
  color: #606266;
  padding:24rpx 20rpx;
  font-size: 28rpx;
  display: flex;
  /* justify-content: space-between; */
  /* align-items: center; */
}
