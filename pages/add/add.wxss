page {
  background: #ececec;
}

.link {
  height: 4rpx;
  background-color: #ececec;
  width: 95%;
  margin: 0 auto;
}

.top-card {
  background-color: white;
  width: 100%;
  border-radius: 20rpx;
}

.top-card .title {
  padding: 18rpx;
  font-size: 30rpx;
}

.top-card .describle {
  font-size: 30rpx;
  padding: 16rpx 30rpx;
  box-sizing: border-box;
}

.top-card .describle textarea {
  width: 100%;
  height: 100px;
  border: 4rpx solid #ececec;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.buttom-card {
  margin-top: 50rpx;
  width: 100%;
  height: 200rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.buttom-card .span {
  position: relative;
  top: 30rpx;
  left: 30rpx;
  font-size: 35rpx;
  flex: 1;
}

.buttom-card image {
  position: relative;
  right: 50rpx;
  float: right;
  width: 50rpx;
  height: 50rpx;
}

.buttom {
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: white;
}

.buttom button {
  margin: 15rpx;
  background-color: red;
  color: #fff;
}

.img-span {
  padding: 16rpx 0 0 34rpx;
}

.img {
  margin: 10rpx;
  width: 140rpx;
  height: 140rpx;
}
